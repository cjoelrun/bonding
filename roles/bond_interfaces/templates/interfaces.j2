# /etc/network/interfaces

# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

#eth0 is manually configured, and slave to the "mgmt" bonded NIC
auto eth0
iface eth0 inet manual
    bond-master mgmt
    bond-primary eth0

#eth2 ditto, thus creating a 2-link bond.
auto eth2
iface eth2 inet manual
    bond-master mgmt

# mgmt is the bonding NIC and can be used like any other normal NIC.
# mgmt is configured using static network information.
auto mgmt
iface mgmt inet static
    address {{ ansible_default_ipv4.address }}
    netmask {{ netmask }}
    gateway {{ gateway }}
    dns-nameservers 8.8.8.8 8.8.4.4
    dns-search {{ dns-search }}
    bond-slaves none
    bond-mode active-backup
    bond-miimon 100
    bond-downdelay 200
    bond-updelay 200

#eth4 is manually configured, and slave to the "vmnet" bonded NIC
auto eth4
iface eth4 inet manual
    bond-master vmnet
    bond-primary eth4

#eth6 ditto, thus creating a 2-link bond.
auto eth6
iface eth6 inet manual
    bond-master vmnet

# vmnet is the bonding NIC and can be used like any other normal NIC.
# vmnet is configured using static network information.
auto vmnet
iface vmnet inet static
    up ip link set $IFACE up
    down ip link set $IFACE down
    bond-slaves none
    bond-mode active-backup
    bond-miimon 100
    bond-downdelay 200
    bond-updelay 200
